<%= simple_form_for(@customer, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cust_company_name %>
    <%= f.input :cust_name %>
    <%= f.input :cust_street %>
    <%= f.input :cust_city %>
    <%= f.input :cust_state %>
    <%= f.input :cust_zipcode %>
    <%= f.input :cust_phone %>
    <%= f.input :cust_fax %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
